<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" >

    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1" >
        <include layout="@layout/text_area" />
    </LinearLayout>

    <FrameLayout android:id="@+id/on_screen_keyboard" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="0" >
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" >
            <include layout="@layout/button_area" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
